// Place your settings in this file to overwrite default and user settings.
{
    "files.exclude": {
        "out": false // set this to true to hide the "out" folder with the compiled JS files
    },
    "search.exclude": {
        "out": true // set this to false to include "out" folder in search results
    },
    // Turn off tsc task auto detection since we have the necessary tasks as npm scripts
    "typescript.tsc.autoDetect": "off",
    "editorjumper.selectedIDE": "WebStorm", 
    "vs-browser.proxyMode": false,
    "vs-browser.url": "http://localhost",
    "vs-browser.favourites.list": {},
    "vs-browser.favourites.savingProfile": "global",
    "vs-browser.autoCompleteUrl": "http://",
    "vs-browser.localProxyServer.enabled": false,
    "vs-browser.localProxyServer.port": 9999,
    "vs-browser.localProxyServer.cookieDomainRewrite": false,
    "vs-browser.localProxyServer.forceLocation": false,
    "vs-browser.reload.onSave": false,
    "vs-browser.reload.autoReloadDurationEnabled": false,
    "vs-browser.reload.autoReloadDurationTime": 15000,
    "vs-browser.columnToShowIn": "Two",
    "vs-browser.showMessageDialog": false,
    "vs-browser.showViewContainer": true,
    "vs-browser.showStatusBarItem": true,
    "vs-browser.showUpdateChanges": true,
}
